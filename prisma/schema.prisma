// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id Int @id @default(autoincrement())
  name String 
  youtubeId String
  albumUrl String
  artistId Int?
  artist Artist? @relation(fields: [artistId], references: [id])
}

model Artist {
  id Int @id @default(autoincrement())
  name String @unique
  songs Song[]
}
